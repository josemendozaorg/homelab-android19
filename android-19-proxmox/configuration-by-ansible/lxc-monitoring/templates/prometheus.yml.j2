global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'proxmox-host'
    static_configs:
      - targets: ['proxmox.homelab:9100']

  - job_name: 'ups'
    static_configs:
      - targets: ['proxmox.homelab:9162']

  - job_name: 'vms'
    static_configs:
      - targets: 
        - 'ai.homelab:9100'        # AI LLM
        - 'coolify.homelab:9100'   # Coolify
        - 'desktop.homelab:9100'   # Ubuntu Desktop

  - job_name: 'gpu'
    static_configs:
      - targets: ['ai.homelab:9400']
