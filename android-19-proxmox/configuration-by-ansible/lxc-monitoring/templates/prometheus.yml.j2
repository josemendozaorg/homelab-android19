      - targets: ['localhost:9090']

  - job_name: 'proxmox-host'
    static_configs:
      - targets: ['192.168.0.19:9100']

  - job_name: 'vms'
    static_configs:
      - targets: 
        - '192.168.0.140:9100'  # AI LLM
        - '192.168.0.160:9100'  # Coolify
        - '192.168.0.103:9100'  # Ubuntu Desktop

  - job_name: 'gpu'
