[Unit]
Description=Node Exporter
After=network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/usr/local/bin/node_exporter \
    --collector.apcupsd \
    --collector.apcupsd.addr=:3551 \
    --collector.systemd \
    --collector.processes

[Install]
WantedBy=multi-user.target
